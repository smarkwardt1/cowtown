---
import tickets from "../../data/tickets.js";
---

<div class="container purchase-tickets">
  <h1>Purchase Tickets</h1>
  <div class="row">
    {
      tickets.map((item) => (
        <div class="row">
          <div class="tickets-card-container">
            <div class="card bg-light mb-3 tickets-card">
              <div class="card-body d-flex flex-column flex-md-row justify-content-between">
                <div>
                  <h5 class="card-title">{item.name}</h5>
                  <p class="card-text">{item.text}</p>
                </div>
                <div class="d-flex justify-content-between align-items-center mt-3 mt-md-0">
                  <h4 class="card-text ticket-price">{item.price}</h4>
                  <button type="button" class="btn btn-primary">
                    Purchase
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</div>
